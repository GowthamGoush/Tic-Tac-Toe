<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="CustomToast">
        <item name="stColorBackground">#B1ECF6</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">#FFF4F9FA</item>
        <item name="cornerRadius">10dp</item>
        <item name="stGravity">center</item>
        <item name="stLength">LONG</item>
        <item name="stIconStart">@drawable/ic_won</item>
        <item name="stIconEnd">@drawable/ic_won</item>
        <item name="stTextSize">30dp</item>
    </style>
</resources>
