<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main3Activity"
    android:background="@drawable/ic_background"
    >

    <TextView
        android:id="@+id/text_playerX"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:gravity="center"
        android:fontFamily="@font/aldrich"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:background="@drawable/rounded_text_2"
        />

    <TextView
        android:id="@+id/text_playerO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:background="@drawable/rounded_text_2"
        android:ems="10"
        android:fontFamily="@font/aldrich"
        android:gravity="center"
        android:textSize="20dp"
        android:textColor="@color/black"
        />

    <ImageView
        android:id="@+id/grid"
        android:layout_width="253dp"
        android:layout_height="237dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:background="@drawable/ic_grid_3"
        android:alpha="0"
        />

    <TextView
        android:id="@+id/center1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="210dp"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/audiowide"
        android:gravity="center"
        android:textSize="40dp"
        android:textColor="@color/white"
        />

    <TextView
        android:id="@+id/left1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="210dp"
        android:layout_marginEnd="40dp"
        android:layout_toStartOf="@+id/center1"
        android:fontFamily="@font/audiowide"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="40dp"
        />

    <TextView
        android:id="@+id/right1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="210dp"
        android:layout_marginStart="40dp"
        android:layout_toEndOf="@+id/center1"
        android:fontFamily="@font/audiowide"
        android:gravity="center"
        android:textSize="40dp"
        android:textColor="@color/white"
        />

    <TextView
        android:id="@+id/center2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="290dp"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/audiowide"
        android:gravity="center"
        android:textSize="40dp"
        android:textColor="@color/white"
        />

    <TextView
        android:id="@+id/left2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="290dp"
        android:layout_marginEnd="40dp"
        android:layout_toStartOf="@+id/center2"
        android:fontFamily="@font/audiowide"
        android:gravity="center"
        android:textSize="40dp"
        android:textColor="@color/white"
        />

    <TextView
        android:id="@+id/right2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="290dp"
        android:layout_marginStart="40dp"
        android:layout_toEndOf="@+id/center2"
        android:fontFamily="@font/audiowide"
        android:gravity="center"
        android:textSize="40dp"
        android:textColor="@color/white"
        />

    <TextView
        android:id="@+id/center3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="370dp"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/audiowide"
        android:gravity="center"
        android:textSize="40dp"
        android:textColor="@color/white"
        />

    <TextView
        android:id="@+id/left3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="370dp"
        android:layout_marginEnd="40dp"
        android:layout_toStartOf="@+id/center3"
        android:fontFamily="@font/audiowide"
        android:gravity="center"
        android:textSize="40dp"
        android:textColor="@color/white"
        />

    <TextView
        android:id="@+id/right3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="370dp"
        android:layout_marginStart="40dp"
        android:layout_toEndOf="@+id/center3"
        android:fontFamily="@font/audiowide"
        android:gravity="center"
        android:textSize="40dp"
        android:textColor="@color/white"
        />

    <ImageView
        android:id="@+id/cross_center1"
        android:layout_width="10dp"
        android:layout_height="280dp"
        android:background="@drawable/custom_cross"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="175dp"
        android:alpha="0"
    />

    <ImageView
        android:id="@+id/cross_ver1"
        android:layout_width="10dp"
        android:layout_height="280dp"
        android:layout_marginTop="175dp"
        android:layout_marginEnd="80dp"
        android:layout_toStartOf="@+id/cross_center1"
        android:alpha="0"
        android:background="@drawable/custom_cross" />

    <ImageView
        android:id="@+id/cross_ver2"
        android:layout_width="10dp"
        android:layout_height="280dp"
        android:layout_marginTop="175dp"
        android:layout_marginStart="80dp"
        android:layout_toEndOf="@+id/cross_center1"
        android:alpha="0"
        android:background="@drawable/custom_cross" />

    <ImageView
        android:id="@+id/cross_diag1"
        android:layout_width="10dp"
        android:layout_height="280dp"
        android:background="@drawable/custom_cross"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="175dp"
        android:rotation="45"
        android:alpha="0"
        />

    <ImageView
        android:id="@+id/cross_diag2"
        android:layout_width="10dp"
        android:layout_height="280dp"
        android:background="@drawable/custom_cross"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="175dp"
        android:rotation="-45"
        android:alpha="0"
        />

    <ImageView
        android:id="@+id/cross_center2"
        android:layout_width="280dp"
        android:layout_height="10dp"
        android:background="@drawable/custom_cross"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="310dp"
        android:alpha="0"
        />

    <ImageView
        android:id="@+id/cross_hor1"
        android:layout_width="280dp"
        android:layout_height="10dp"
        android:background="@drawable/custom_cross"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="230dp"
        android:alpha="0"
        />

    <ImageView
        android:id="@+id/cross_hor2"
        android:layout_width="280dp"
        android:layout_height="10dp"
        android:background="@drawable/custom_cross"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="390dp"
        android:alpha="0"
        />

    <ImageView
        android:id="@+id/exit_btn"
        android:layout_width="280dp"
        android:layout_height="10dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="390dp"
        android:alpha="0"
        />

    <ImageView
        android:id="@+id/retry_btn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/retry_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="470dp"
        android:alpha="0"
        android:onClick="retryGame"
        />
</RelativeLayout>